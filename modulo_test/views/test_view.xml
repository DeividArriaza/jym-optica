<odoo>
    <record id="view_form_test_model" model="ir.ui.view">
        <field name="name">test.model.form</field>
        <field name="model">test_model</field>
        <field name="arch" type="xml">
            <form string="Test Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_test_model" model="ir.ui.view">
        <field name="name">test.model.tree</field>
        <field name="model">test_model</field>
        <field name="arch" type="xml">
            <list string="Test Model">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Acción para el modelo -->
    <record id="action_test_model" model="ir.actions.act_window">
        <field name="name">Test Model</field>
        <field name="res_model">test_model</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer registro de Test Model
            </p>
        </field>
    </record>

    <!-- Menú raíz -->
    <menuitem id="menu_test_root"
              name="Test Model"
              sequence="10"/>

    <!-- Menú principal -->
    <menuitem id="menu_test_model"
              name="Test Model"
              sequence="10"
              action="action_test_model"
              parent="menu_test_root"/>

</odoo>