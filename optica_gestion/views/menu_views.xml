<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Menú principal de la aplicación -->
        <menuitem id="menu_optica_root"
            name="Óptica"
            sequence="10"
            web_icon="optica_gestion,static/description/icon.png"/>

        <!-- Pacientes -->
        <menuitem id="menu_optica_pacientes"
            name="Pacientes"
            parent="menu_optica_root"
            action="action_pacientes_optica"
            sequence="10"/>

        <!-- Consultas (para importación) -->
        <record id="action_consultas_optica" model="ir.actions.act_window">
            <field name="name">Consultas</field>
            <field name="res_model">optica.consulta</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_optica_consultas"
            name="Consultas"
            parent="menu_optica_root"
            action="action_consultas_optica"
            sequence="20"/>

        <!-- Citas -->
        <menuitem id="menu_optica_citas"
            name="Citas"
            parent="menu_optica_root"
            action="action_cita"
            sequence="30"/>
    </data>
</odoo>
