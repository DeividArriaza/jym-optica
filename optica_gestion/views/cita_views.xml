<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario de cita -->
        <record id="view_cita_form" model="ir.ui.view">
            <field name="name">optica.cita.form</field>
            <field name="model">optica.cita</field>
            <field name="arch" type="xml">
                <form string="Cita">
                    <header>
                        <button name="action_guardar_borrador" string="Guardar Borrador" type="object" class="oe_highlight" invisible="state != 'borrador'"/>
                        <button name="action_confirmar" string="Confirmar" type="object" class="oe_highlight" invisible="state != 'borrador'"/>
                        <button name="action_completar" string="Completar" type="object" class="oe_highlight" invisible="state != 'confirmada'"/>
                        <button name="action_no_asistio" string="No Asistió" type="object" class="btn-warning" invisible="state != 'confirmada'"/>
                        <button name="action_cancelar" string="Cancelar Cita" type="object" class="btn-danger" invisible="state in ('completada', 'cancelada', 'no_asistio') or not id" confirm="¿Está seguro que desea cancelar esta cita?"/>
                        <button name="action_reabrir" string="Reabrir" type="object" invisible="state not in ('cancelada', 'no_asistio')"/>
                        <field name="state" widget="statusbar" statusbar_visible="borrador,confirmada,completada"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Datos de Contacto">
                                <field name="nombre" placeholder="Nombre de quien agenda"/>
                                <field name="telefono" placeholder="Teléfono"/>
                                <field name="correo" placeholder="Correo electrónico"/>
                            </group>
                            <group string="Asignación">
                                <field name="optometrista_id" string="Asignado a"/>
                                <field name="cantidad_personas"/>
                            </group>
                        </group>
                        <group>
                            <group string="Fecha y Hora">
                                <field name="fecha"/>
                                <field name="hora_inicio"/>
                                <field name="hora_fin"/>
                                <field name="duracion" readonly="1"/>
                            </group>
                        </group>
                        <group string="Notas">
                            <field name="notas" nolabel="1" placeholder="Notas adicionales..."/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vista de lista de citas -->
        <record id="view_cita_list" model="ir.ui.view">
            <field name="name">optica.cita.list</field>
            <field name="model">optica.cita</field>
            <field name="arch" type="xml">
                <list string="Citas" decoration-warning="state == 'borrador'" decoration-success="state == 'confirmada'" decoration-muted="state in ('cancelada', 'no_asistio')">
                    <field name="fecha"/>
                    <field name="hora_inicio"/>
                    <field name="nombre"/>
                    <field name="telefono"/>
                    <field name="cantidad_personas" string="Personas"/>
                    <field name="optometrista_id" string="Asignado a"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <!-- Vista de calendario -->
        <record id="view_cita_calendar" model="ir.ui.view">
            <field name="name">optica.cita.calendar</field>
            <field name="model">optica.cita</field>
            <field name="arch" type="xml">
                <calendar string="Citas" date_start="datetime_inicio" date_stop="datetime_fin" color="optometrista_id" mode="week" event_open_popup="true" quick_create="false">
                    <field name="nombre"/>
                    <field name="telefono"/>
                    <field name="cantidad_personas"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Vista de búsqueda -->
        <record id="view_cita_search" model="ir.ui.view">
            <field name="name">optica.cita.search</field>
            <field name="model">optica.cita</field>
            <field name="arch" type="xml">
                <search string="Buscar Cita">
                    <field name="nombre"/>
                    <field name="telefono"/>
                    <field name="optometrista_id"/>
                    <field name="fecha"/>
                    <separator/>
                    <filter string="Hoy" name="hoy" domain="[('fecha', '=', context_today())]"/>
                    <filter string="Pendientes" name="pendientes" domain="[('state', 'in', ['borrador', 'confirmada'])]"/>
                    <filter string="Mis Citas" name="mis_citas" domain="[('optometrista_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Borrador" name="borrador" domain="[('state', '=', 'borrador')]"/>
                    <filter string="Confirmadas" name="confirmadas" domain="[('state', '=', 'confirmada')]"/>
                    <filter string="Completadas" name="completadas" domain="[('state', '=', 'completada')]"/>
                </search>
            </field>
        </record>

        <!-- Acción de ventana -->
        <record id="action_cita" model="ir.actions.act_window">
            <field name="name">Citas</field>
            <field name="res_model">optica.cita</field>
            <field name="view_mode">list,calendar,form</field>
            <field name="context">{'search_default_pendientes': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Agendar una nueva cita
                </p>
            </field>
        </record>
    </data>
</odoo>
