<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Secuencia para número de ficha -->
        <record id="sequence_paciente_ficha" model="ir.sequence">
            <field name="name">Ficha de Paciente Óptica</field>
            <field name="code">optica.paciente.ficha</field>
            <field name="prefix">F-</field>
            <field name="padding">5</field>
        </record>

        <!-- Extensión del formulario de contacto para pacientes de óptica -->
        <record id="view_partner_form_optica" model="ir.ui.view">
            <field name="name">res.partner.form.optica</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority">5</field>
            <field name="arch" type="xml">
                <!-- Agregar botones de estadísticas -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_ver_consultas" type="object" class="oe_stat_button" icon="fa-stethoscope" invisible="not is_optica_patient">
                        <field name="consulta_count" widget="statinfo" string="Consultas"/>
                    </button>
                </xpath>

                <!-- Agregar checkbox de paciente y ficha después del nombre -->
                <xpath expr="//field[@name='company_type']" position="after">
                    <div class="d-flex align-items-center gap-1">
                        <field name="is_optica_patient"/>
                        <span>Paciente</span>
                    </div>
                    <field name="ficha_numero" readonly="1" invisible="not is_optica_patient"/>
                </xpath>

                <!-- ========== OCULTAR CAMPOS PARA PACIENTES ========== -->
                
                <!-- Ocultar Company -->
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar el contenedor de Address -->
                <xpath expr="//span[@name='address_name']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar el div de address format -->
                <xpath expr="//div[hasclass('o_address_format')]" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar Job Position -->
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar Tax ID -->
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar Website -->
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar Tags -->
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar Idioma -->
                <xpath expr="//field[@name='lang']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- ========== AGREGAR CAMPOS DE PACIENTE EN COLUMNA IZQUIERDA ========== -->
                <xpath expr="//div[hasclass('o_address_format')]" position="after">
                    <field name="direccion_paciente" invisible="not is_optica_patient" string="Dirección"/>
                    <field name="fecha" invisible="not is_optica_patient" string="Fecha Registro"/>
                    <field name="edad" invisible="not is_optica_patient"/>
                </xpath>

                <!-- ========== AGREGAR CAMPOS DE PACIENTE EN COLUMNA DERECHA ========== -->
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="blacklisted" invisible="not is_optica_patient" string="Lista Negra"/>
                    <field name="blacklist_motivo" invisible="not blacklisted" string="Motivo" placeholder="Motivo de lista negra..."/>
                    <field name="ocupacion" invisible="not is_optica_patient"/>
                    <field name="referencia" invisible="not is_optica_patient"/>
                </xpath>

                <!-- ========== FICHA MÉDICA Y OBSERVACIONES ========== -->
                <xpath expr="//sheet/group[1]" position="after">
                    <!-- FICHA MÉDICA -->
                    <group string="Ficha Médica" invisible="not is_optica_patient">
                        <group>
                            <field name="ev_visual" string="Evaluación visual previa"/>
                            <field name="ob_ev_visual" placeholder="Observaciones..." invisible="not ev_visual"/>
                            
                            <field name="enfermedad" string="Padece alguna enfermedad"/>
                            <field name="ob_enfermedad" placeholder="¿Cuál?..." invisible="not enfermedad"/>
                            
                            <field name="computadora" string="Usa computadora"/>
                            <field name="ob_computadora" placeholder="¿Cuántas horas?..." invisible="not computadora"/>
                            
                            <field name="lentes" string="Ha usado lentes"/>
                            <field name="ob_lentes" placeholder="¿Qué tipo?..." invisible="not lentes"/>
                            
                            <field name="antecedentes" string="Antecedentes familiares"/>
                            <field name="ob_antecedentes" placeholder="¿Cuáles?..." invisible="not antecedentes"/>
                        </group>
                        <group string="Síntomas">
                            <field name="cefalea"/>
                            <field name="vision_borrosa"/>
                            <field name="dolor"/>
                            <field name="ojo_rojo"/>
                            <field name="fotofobia"/>
                            <field name="glaucoma"/>
                            <field name="diabetes"/>
                            <field name="secreciones"/>
                            <field name="cansancio"/>
                            <field name="volantes"/>
                            <field name="ardor"/>
                            <field name="embarazo"/>
                            <field name="presion"/>
                            <field name="cx"/>
                            <field name="otros"/>
                        </group>
                    </group>

                    <!-- OBSERVACIONES CLÍNICAS -->
                    <group string="Observaciones Clínicas" invisible="not is_optica_patient">
                        <group>
                            <field name="anexos_oculares" placeholder="NL, sin patologías aparentes..."/>
                        </group>
                        <group>
                            <field name="fondo_ojo" placeholder="NL, sin patologías aparentes..."/>
                        </group>
                        <group colspan="2">
                            <field name="observaciones" placeholder="Observaciones generales..."/>
                        </group>
                    </group>

                    <!-- HISTORIAL DE CONSULTAS -->
                    <separator string="CONSULTAS" invisible="not is_optica_patient"/>
                    <field name="consulta_ids" nolabel="1" invisible="not is_optica_patient" context="{'default_partner_id': id}">
                        <list string="Consultas" delete="false">
                            <control>
                                <create string="Agregar una consulta"/>
                            </control>
                            <field name="fecha_formateada" string="Fecha de Consulta"/>
                            <field name="optometrista_id" string="Realizado por"/>
                            <field name="rx_observaciones" string="Comentarios"/>
                            <button name="action_eliminar_consulta" type="object" icon="fa-trash" title="Eliminar consulta" confirm="¿Está seguro que desea eliminar esta consulta? Esta acción no se puede deshacer."/>
                        </list>
                    </field>
                </xpath>

                <!-- ========== OCULTAR PESTAÑAS PARA PACIENTES ========== -->
                
                <!-- Ocultar pestaña Contacts -->
                <xpath expr="//page[@name='contact_addresses']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar pestaña Sales & Purchase (con 's' al final) -->
                <xpath expr="//page[@name='sales_purchases']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar pestaña Notes -->
                <xpath expr="//page[@name='internal_notes']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar pestaña Invoicing (accounting) -->
                <xpath expr="//page[@name='accounting']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>

                <!-- Ocultar pestaña Invoicing disabled -->
                <xpath expr="//page[@name='accounting_disabled']" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>
            </field>
        </record>

        <!-- Ocultar chatter para pacientes - hereda de la vista de mail -->
        <record id="view_partner_form_optica_hide_chatter" model="ir.ui.view">
            <field name="name">res.partner.form.optica.hide.chatter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="mail.res_partner_view_form_inherit_mail"/>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <xpath expr="//chatter" position="attributes">
                    <attribute name="invisible">is_optica_patient</attribute>
                </xpath>
            </field>
        </record>

        <!-- Vista de lista de pacientes de óptica -->
        <record id="view_partner_list_optica" model="ir.ui.view">
            <field name="name">res.partner.list.optica</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list string="Pacientes de Óptica" decoration-danger="blacklisted">
                    <field name="ficha_numero"/>
                    <field name="name"/>
                    <field name="edad"/>
                    <field name="phone"/>
                    <field name="ocupacion" optional="show"/>
                    <field name="ultima_consulta_fecha" string="Última Consulta"/>
                    <field name="consulta_count" string="Consultas"/>
                    <field name="blacklisted" string="Lista Negra" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vista de búsqueda de pacientes de óptica con búsqueda combinada -->
        <record id="view_partner_search_optica" model="ir.ui.view">
            <field name="name">res.partner.search.optica</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Buscar Paciente">
                    <field name="name" filter_domain="['|', '|', ('name', 'ilike', self), ('phone', 'ilike', self), ('ficha_numero', 'ilike', self)]"/>
                    <field name="ficha_numero"/>
                    <field name="phone"/>
                    <separator/>
                    <filter string="Usa Lentes" name="usa_lentes" domain="[('lentes', '=', True)]"/>
                    <filter string="Con Diabetes" name="diabetes" domain="[('diabetes', '=', True)]"/>
                    <filter string="Lista Negra" name="lista_negra" domain="[('blacklisted', '=', True)]"/>
                </search>
            </field>
        </record>

        <!-- Acción de ventana para pacientes de óptica -->
        <record id="action_pacientes_optica" model="ir.actions.act_window">
            <field name="name">Pacientes</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="domain">[('is_optica_patient', '=', True)]</field>
            <field name="context">{'default_is_optica_patient': True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_partner_list_optica')}),
                (0, 0, {'view_mode': 'form'})]"/>
            <field name="search_view_id" ref="view_partner_search_optica"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registrar un nuevo paciente
                </p>
                <p>
                    Los pacientes se guardan como Contactos de Odoo, permitiendo integración con Ventas, Facturación y CRM.
                </p>
            </field>
        </record>
    </data>
</odoo>
